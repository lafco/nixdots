theme "catppuccin-mocha"
default_mode "normal"
default_shell "fish"
default_layout "default"
styled_underlines false
mouse_mode false
simplified_ui true

plugins {
  session-manager location="zellij:session-manager"
  zjstatus location="file:~/.config/zellij/plugins/zjstatus.wasm" {
    color_base "#232136"
    color_muted "#6e6a86"
    color_subtle "#908caa"
    color_text "#e0def4"
    color_love "#eb6f92"
    color_gold "#f6c177"
    color_rose "#ea9a97"
    color_pine "#3e8fb0"
    color_foam "#9ccfd8"

    format_left   "#[fg=$text] {session} {mode}"
    format_center "#[fg=$text] {tabs}"
    format_right  ""
    format_space  "#[fg=$text]"
    format_hide_on_overlength "true"
    format_precedence "lrc"
    border_enabled  "true"
    hide_frame_for_single_pane "false"

    mode_normal        "#[fg=$text] NORMAL "
    mode_locked        "#[fg=$muted] LOCKED "
    mode_pane          "#[fg=$pine,bold] PANE "
    mode_tab           "#[fg=$rose,bold] TAB "
    mode_scroll        "#[fg=$love,bold] SCROLL "
    mode_enter_search  "#[fg=$love,bold] ENT-SEARCH "
    mode_search        "#[fg=$love,bold] SEARCH "
    mode_resize        "#[fg=$gold,bold] RESIZE "
    mode_rename_tab    "#[fg=$gold,bold] RENAME TAB "
    mode_rename_pane   "#[fg=$gold,bold] RENAME PANE "
    mode_move          "#[fg=$gold,bold] MOVE "
    mode_session       "#[fg=$love,bold] SESSION "
    mode_prompt        "#[fg=$love,bold] PROMPT "

    tab_normal              "#[fg=$subtle] {name} #[]"
    tab_normal_fullscreen   "#[fg=$subtle] {name} #[]"
    tab_normal_sync         "#[fg=$subtle] {name} #[]"
    tab_active              "#[fg=$text,bold] {name} #[]"
    tab_active_fullscreen   "#[fg=$text,bold] {name} #[]"
    tab_active_sync         "#[fg=$text,bold] {name} #[]"
    tab_separator           "|"
  }
}

load_plugins {
    "file:~/.config/zellij/plugins/zjframes.wasm" {
        hide_frame_for_single_pane       "false"
        hide_frame_except_for_search     "false"
        hide_frame_except_for_fullscreen "false"
    }
}

keybinds clear-defaults=true {
    locked {
        bind "Alt g" { SwitchToMode "normal"; }
    }
    pane {
        bind "down" { NewPane "down"; SwitchToMode "normal"; }
        bind "right" { NewPane "right"; SwitchToMode "normal"; }
        bind "c" { }
        bind "e" { TogglePaneEmbedOrFloating; SwitchToMode "normal"; }
        bind "f" { ToggleFocusFullscreen; SwitchToMode "normal"; }
        bind "j" { NewPane "down"; SwitchToMode "normal"; }
        bind "l" { NewPane "right"; SwitchToMode "normal"; }
        bind "n" { NewPane; SwitchToMode "normal"; }
        bind "p" { SwitchFocus; SwitchToMode "normal"; }
        bind "Alt p" { SwitchToMode "normal"; }
        bind "r" { SwitchToMode "renamepane"; PaneNameInput 0; }
        bind "w" { ToggleFloatingPanes; SwitchToMode "normal"; }
        bind "x" { CloseFocus; SwitchToMode "normal"; }
        bind "z" { TogglePaneFrames; SwitchToMode "normal"; }
    }
    tab {
        bind "Alt 1" { GoToTab 1; SwitchToMode "normal"; }
        bind "Alt 2" { GoToTab 2; SwitchToMode "normal"; }
        bind "Alt 3" { GoToTab 3; SwitchToMode "normal"; }
        bind "Alt 4" { GoToTab 4; SwitchToMode "normal"; }
        bind "Alt 5" { GoToTab 5; SwitchToMode "normal"; }
        bind "Alt 6" { GoToTab 6; SwitchToMode "normal"; }
        bind "b" { BreakPane; SwitchToMode "normal"; }
        bind "h" { MoveTab "left"; }
        bind "l" { MoveTab "right"; }
        bind "n" { NewTab; SwitchToMode "normal"; }
        bind "r" { SwitchToMode "renametab"; TabNameInput 0; }
        bind "Alt t" { SwitchToMode "normal"; }
        bind "x" { CloseTab; SwitchToMode "normal"; }
    }
    move {
        bind "left" { MovePane "left"; }
        bind "down" { MovePane "down"; }
        bind "up" { MovePane "up"; }
        bind "right" { MovePane "right"; }
        bind "h" { MovePane "left"; }
        bind "j" { MovePane "down"; }
        bind "k" { MovePane "up"; }
        bind "l" { MovePane "right"; }
        bind "Alt m" { SwitchToMode "normal"; }
    }
    scroll {
        bind "PageDown" { PageScrollDown; }
        bind "PageUp" { PageScrollUp; }
        bind "down" { ScrollDown; }
        bind "up" { ScrollUp; }
        bind "home" { ScrollToTop; SwitchToMode "normal"; }
        bind "end" { ScrollToBottom; SwitchToMode "normal"; }
        bind "d" { HalfPageScrollDown; }
        bind "Ctrl d" { PageScrollDown; }
        bind "f" { SwitchToMode "entersearch"; SearchInput 0; }
        bind "j" { ScrollDown; }
        bind "Shift j" { ScrollToBottom; SwitchToMode "normal"; }
        bind "k" { ScrollUp; }
        bind "Shift k" { ScrollToTop; SwitchToMode "normal"; }
        bind "Alt s" { SwitchToMode "normal"; }
        bind "u" { HalfPageScrollUp; }
        bind "Ctrl u" { PageScrollUp; }
    }
    search {
        bind "c" { SearchToggleOption "CaseSensitivity"; }
        bind "Alt f" { SwitchToMode "normal"; }
        bind "n" { Search "down"; }
        bind "o" { SearchToggleOption "WholeWord"; }
        bind "p" { Search "up"; }
        bind "w" { SearchToggleOption "Wrap"; }
    }
    shared_except "locked" {
        bind "Alt left" { Resize "Increase left"; }
        bind "Alt down" { Resize "Increase down"; }
        bind "Alt up" { Resize "Increase up"; }
        bind "Alt right" { Resize "Increase right"; }
        bind "Alt /" { ToggleFloatingPanes; SwitchToMode "normal"; }
        bind "Alt b" { NewPane "right"; }
        bind "Alt d" { Detach; }
        bind "Alt g" { SwitchToMode "locked"; }
        bind "Ctrl h" { MoveFocus "left"; }
        bind "Alt h" { MoveFocus "left"; }
        bind "Ctrl j" { MoveFocus "down"; }
        bind "Alt j" { MoveFocus "down"; }
        bind "Ctrl k" { MoveFocus "up"; }
        bind "Alt k" { MoveFocus "up"; }
        bind "Ctrl l" { MoveFocus "right"; }
        bind "Alt l" { MoveFocus "right"; }
        bind "Alt o" {
            LaunchOrFocusPlugin "session-manager" {
                floating true
                move_to_focused_tab true
            }
            SwitchToMode "normal"
        }
        bind "Alt q" { Quit; }
        bind "Alt v" { NewPane "down"; }
        bind "Alt x" { CloseFocus; }
    }
    shared_except "locked" "move" {
        bind "Alt m" { SwitchToMode "move"; }
    }
    shared_except "locked" "scroll" {
        bind "Alt s" { SwitchToMode "scroll"; }
    }
    shared_except "locked" "tab" {
        bind "Alt 1" { GoToTab 1; }
        bind "Alt 2" { GoToTab 2; }
        bind "Alt 3" { GoToTab 3; }
        bind "Alt 4" { GoToTab 4; }
        bind "Alt 5" { GoToTab 5; }
        bind "Alt 6" { GoToTab 6; }
        bind "Alt t" { SwitchToMode "tab"; }
    }
    shared_except "locked" "pane" {
        bind "Alt p" { SwitchToMode "pane"; }
    }
    shared_except "normal" "locked" "entersearch" {
        bind "enter" { SwitchToMode "normal"; }
    }
    shared_except "normal" "locked" "entersearch" "renametab" "renamepane" {
        bind "esc" { SwitchToMode "normal"; }
    }
    entersearch {
        bind "Alt c" { SwitchToMode "scroll"; }
        bind "esc" { SwitchToMode "scroll"; }
        bind "enter" { SwitchToMode "search"; }
    }
    renametab {
        bind "esc" { UndoRenameTab; SwitchToMode "tab"; }
    }
    shared_among "renametab" "renamepane" {
        bind "Alt c" { SwitchToMode "normal"; }
    }
    renamepane {
        bind "esc" { UndoRenamePane; SwitchToMode "pane"; }
    }
}
